<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="custom_snippet_tabs" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">

                <div class="oe_snippet ui-draggable">
                    <!-- Snippet Name -->
                    <div class="oe_snippet_thumbnail ui-draggable-handle">
                        <div class="oe_snippet_thumbnail_img" style="background-image: url(&quot;/website_tabs/static/src/img/thumbnail.png&quot;);"></div>
                        <span class="oe_snippet_thumbnail_title">選單</span>
                    </div>

                    <!-- Snippet Body -->
                    <section class="oe_snippet_body cst mt16 mb16">
                        <div class="container">
                            <div class="row">
                                <div role="tabpanel">
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li role="presentation" class="active"><a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab">Text Block</a></li>
                                        <li role="presentation"><a href="#tab2" aria-controls="tab2" role="tab" data-toggle="tab">Text-Image</a></li>
                                        <li role="presentation"><a href="#tab3" aria-controls="tab3" role="tab" data-toggle="tab">Image-Text</a></li>
                                    </ul>
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div role="tabpanel" class="oe_structure oe_empty tab-pane active" id="tab1">
                                            <section class="mb16">
                                                <!-- Text Block snippet -->
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-md-12 text-center mt16 mb32">
                                                            <h2>title</h2>
                                                            <h3 class="text-muted">Good</h3>
                                                        </div>

                                                        <div class="col-md-12 mb16 mt16">
                                                        <p>none</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                        <div role="tabpanel" class="oe_structure oe_empty tab-pane" id="tab2">
                                            <section class="mt16 mb16">
                                                <!-- Text-Image snippet -->
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-md-6 mt16">
                                                            <h3>text</h3>

                                                            <p>something.</p>

                                                            <p>context.</p>
                                                        </div>

                                                        <div class="col-md-6 mt16"><img alt="Odoo text and image block"
                                                        class="img img-responsive shadow mb16" src=
                                                        "/website/static/src/img/text_image.png"/></div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                        <div role="tabpanel" class="oe_structure oe_empty tab-pane" id="tab3">
                                            <!-- Image-Text snippet -->
                                            <section class="mt16 mb16">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-md-6 mt16"><img alt="Odoo image and text block"
                                                        class="img img-responsive shadow mb16" src=
                                                        "/website/static/src/img/image_text.jpg"/></div>

                                                        <div class="col-md-6 mt16">
                                                            <h3>img</h3>

                                                            <p>photo</p>

                                                            <p>in here</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>

            <!-- Add tabs option -->
            <template id="custom_snippet_tabs_options" inherit_id="website.snippet_options">
                <xpath expr="." position="inside">
                    <div data-js="snippet_testimonial_options" data-snippet-option-id="custom_snippet_tabs" data-selector=".cst">
                        <li class="divider"></li>
                        <li>
                            <a href="#" class="js_add" data-_add_new_tabs="true">增加區塊</a>
                        </li>
                        <li>
                            <a href="#" class="js_remove" data-_remove_current_tabs="true">減少</a>
                        </li>
                    </div>
                </xpath>
            </template>
      
   </data>
</openerp>